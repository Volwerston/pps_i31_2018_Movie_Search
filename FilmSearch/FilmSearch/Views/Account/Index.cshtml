@model FilmSearch.Models.View.AppUserViewModel

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Account Page</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default btn-block btn-info" />
            </div>
        </form>
    </div>
    @if (User.IsInRole("Administrator"))
    {
    <div class="col-md-8">
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Film" asp-action="CreateFilmView">Manage Films</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Person" asp-action="List">Manage Persons</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Genre" asp-action="Index">Manage Genres</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Award" asp-action="Index">Manage Awards</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Log" asp-action="View">Monitor logs</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Account" asp-action="Ban">Ban users</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Newsletter" asp-action="Index">Send newsletter</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="FilmAnalytics" asp-action="Analytics">Films dashboard</a></div>
        </div>
        <div class="panel panel-info">
            <div class="panel-body"><a asp-controller="Account" asp-action="PersonStats">View Person Comment Statistics</a></div>
        </div>
    </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
